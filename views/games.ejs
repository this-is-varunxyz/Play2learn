            .hero h3 {
                font-size: 3rem;
            }
        } */
    
        @media (max-width: 1024px) {
            .footer-content {
                grid-template-columns: 1fr 1fr;
            }
            
            .hero h2 {
                font-size: 3rem;
            }
            
            .hero h3 {
                font-size: 2.5rem;
            }
            h1 {
          font-size: 3.5rem;
        }
        
        .story-section {
          padding: 2rem;
        }
      }
        
    
        @media (max-width: 768px) {
            header {
                flex-direction: column;
                align-items:center;
            }
            
            nav {
                width: 100%;
                flex-wrap: wrap;
                gap: 1rem;
            }
            
            .hero h2 {
                font-size: 2.5rem;
            }
            
            .hero h3 {
                font-size: 2rem;
            }
            
            .hero p {
                font-size: 1rem;
            }
            
            .hero-buttons {
                flex-direction: column;
                gap: 1rem;
            }
            
            .featured-carousel {
                height: 250px;
            }
            
            .games-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            }
            
            .footer-content {
                grid-template-columns: 1fr;
                gap: 2rem;
            }
            
            .footer-bottom {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }
            
            .footer-legal {
                flex-wrap: wrap;
                justify-content: center;
            }
            header {
          flex-direction: column;
          gap: 1.5rem;
        }
        
        nav {
          width: 100%;
          justify-content: center;
          flex-wrap: wrap;
          gap: 1.5rem;
        }
        
        h1 {
          font-size: 2.5rem;
        }
        
        .subtitle {
          font-size: 1.2rem;
        }
        
        .cta-buttons {
          flex-direction: column;
          align-items: center;
        }
        
        .cta-section h2 {
          font-size: 2rem;
        }
        
        .profile-section {
          padding: 1.5rem;
        }
        
        .story-section {
          padding: 1.5rem;
        }
      
        }
    
        @media (max-width: 480px) {
            .container {
                padding: 0 1rem;
            }
            
            .hero h2 {
                font-size: 2rem;
            }
            
            .hero h3 {
                font-size: 1.8rem;
            }
            
            .weekly-update {
                font-size: 0.9rem;
                padding: 0.5rem 1rem;
            }
            
            .games-grid {
                grid-template-columns: 1fr;
            }
            
            .category-filters {
                gap: 0.5rem;
            }
            
            .filter-btn {
                padding: 0.4rem 0.8rem;
                font-size: 0.8rem;
            }
            
            .primary-btn, .secondary-btn {
                padding: 0.7rem 1.5rem;
                font-size: 1rem;
            }
            .container {
          padding: 0 1rem;
        }
        
        header h1.logo {
          font-size: 1.5rem;
        }
        
        .logo-icon {
          font-size: 1.5rem;
        }
        }
    </style>
</head>
