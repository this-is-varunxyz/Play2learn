   <script type="module" >
    import {games} from "./gamesgrid/gamesgrid.js";
import {popup} from "./gamesgrid/gamespopup.js";

document.addEventListener('DOMContentLoaded', function() {
    // Populate games grid
    const gamesGrid = document.querySelector('.games-grid');
    games.forEach((game) => {
        gamesGrid.innerHTML += `
            <div class="game-card">
                <div class="game-img-container">
                    <img src="${game.img}" class="game-img">
                    <div class="game-type">${game.tag}</div>
                </div>
                <div class="game-info">
                    <h3 class="game-title">${game.name}</h3>
                    <button class="play-btn" data-game-name="${game.name}" data-game-img="${game.img}">Play Now</button>
                </div>
            </div>
        `;
    });
    
    // Add event listeners to all Play Now buttons
    document.querySelectorAll('.play-btn').forEach(button => {
        button.addEventListener('click', function() {
            const gameName = this.getAttribute('data-game-name');
            const gameImg = this.getAttribute('data-game-img');
            popup(gameName, gameImg);
        });
    });

    // Featured carousel functionality
    const carouselDots = document.querySelectorAll('.carousel-dot');
    const featuredImg = document.querySelector('.featured-img');
    const carouselArrows = document.querySelectorAll('.carousel-arrow');
    
    // Array of image sources for carousel
    const carouselImages = [
        'images/hill.png',
        'images/snake.png',
        'images/tictactoe.png',
        'images/flappy.png'
    ];
    
    let currentSlide = 0;
    
    // Function to update the carousel
    function updateCarousel(index) {
        // Update image
        featuredImg.src = carouselImages[index];
        
        // Update dots
        carouselDots.forEach(dot => dot.classList.remove('active'));
        carouselDots[index].classList.add('active');
        
        currentSlide = index;
    }
    
    // Set up dot click events
    carouselDots.forEach((dot, index) => {
        dot.addEventListener('click', function() {
            updateCarousel(index);
        });
    });
    
    // Set up arrow click events
    carouselArrows[0].addEventListener('click', function() {
        // Previous slide
        let newIndex = currentSlide - 1;
        if (newIndex < 0) newIndex = carouselImages.length - 1;
        updateCarousel(newIndex);
    });
    
    carouselArrows[1].addEventListener('click', function() {
        // Next slide
        let newIndex = currentSlide + 1;
        if (newIndex >= carouselImages.length) newIndex = 0;
        updateCarousel(newIndex);
    });
    
    // Auto-rotate carousel every 5 seconds
    setInterval(function() {
        let newIndex = currentSlide + 1;
        if (newIndex >= carouselImages.length) newIndex = 0;
        updateCarousel(newIndex);
    }, 5000);

    // Sign in button
    const signInBtn = document.querySelector('.sign-in-btn');
    signInBtn.addEventListener('click', function() {
        alert('Sign in functionality will be implemented here');
    });

    // Hero section buttons
    const heroBtns = document.querySelectorAll('.hero-buttons a');
    heroBtns.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            alert('Button clicked: ' + this.textContent);
        });
    });

    // Newsletter form
    const newsletterForm = document.querySelector('.newsletter-form');
    if (newsletterForm) {
        newsletterForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const email = this.querySelector('.newsletter-input').value;
            if (email) {
                alert('Thank you for subscribing with: ' + email);
                this.reset();
            } else {
                alert('Please enter your email address');
            }
        });
    }
});
   </script>
   
